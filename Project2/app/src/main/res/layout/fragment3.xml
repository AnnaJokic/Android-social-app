<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activity.MainActivty"
                android:orientation="vertical">



    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="45dp"
            android:id="@+id/rv_wall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <EditText
            android:id="@+id/et_wall"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:hint="text message"/>

    <ImageButton
            android:id="@+id/image_btn_send_wall"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/strelica_24dp"/>

    <ImageButton
            android:id="@+id/image_btn_send_wall_slika"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/add_24dp"/>

</RelativeLayout>
